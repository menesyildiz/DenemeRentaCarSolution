@model RentModel

<div class="row">
    <div class="col">
        <div> Araç plakası : @Model.Car.Plate</div>
        <div> Araç modeli : @Model.Car.Name</div>
        <div> Araç markası : @Model.Car.Brand.Name</div>
        <div> Araç yılı : @Model.Car.Year</div>
        <div> Araç vitesi : @Model.Car.Gearbox.Type</div>
        <div> Araç rengi : @Model.Car.Colour.Name</div>
        <div> Araç fiyatı : @Model.Car.Price</div>
    </div>

    <div class="form-group mb-3">
        <form>
            <label asp-for="CustomerId" class="form-label">Müşteri</label>
            <select asp-for="CustomerId" class="form-select" asp-items="@Model.Customers">
                <option value="">Seçiniz</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger small"></span>

            <label asp-for="DeliveryDate" class="form-label">Teslim Tarihi</label>
            <input asp-for="DeliveryDate" class="form-label" />

            <button class="btn btn-danger" type="submit">Kiralandı</button>
        </form>
        
    </div>
</div> 

